{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "starter_section_v1.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "role",
    "section_id",
    "type",
    "file_path",
    "content",
    "is_complete",
    "next_focus"
  ],
  "properties": {
    "schema_version": { "type": "string", "const": "starter_section_v1" },
    "role": { "type": "string", "const": "starter-expand" },
    "section_id": { "type": "string" },
    "type": { "type": "string" },
    "file_path": { "type": "string", "minLength": 1 },
    "content": { "type": "string" },
    "is_complete": { "type": "boolean" },
    "next_focus": { "type": "string" }
  }
}
