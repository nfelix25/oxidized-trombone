{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "review_report_v1.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "role",
    "report_id",
    "exercise_id",
    "node_id",
    "depth_target",
    "attempt_index",
    "pass_fail",
    "score",
    "dominant_tag",
    "remediation"
  ],
  "properties": {
    "schema_version": { "type": "string", "const": "review_report_v1" },
    "role": { "type": "string", "const": "reviewer" },
    "report_id": { "type": "string" },
    "exercise_id": { "type": "string" },
    "node_id": { "type": "string" },
    "depth_target": { "type": "string", "enum": ["D1", "D2", "D3"] },
    "attempt_index": { "type": "integer" },
    "pass_fail": {
      "type": "string",
      "enum": ["PASS", "FAIL", "PROVISIONAL_PASS", "INVALID_CONTEXT"]
    },
    "score": { "type": "integer" },
    "dominant_tag": {
      "anyOf": [
        { "type": "string" },
        { "type": "null" }
      ]
    },
    "remediation": {
      "type": "object",
      "additionalProperties": false,
      "required": ["action", "reason"],
      "properties": {
        "action": {
          "type": "string",
          "enum": ["retry_same", "bridge_lesson", "partial_reveal", "full_reveal", "advance_next"]
        },
        "reason": { "type": "string" }
      }
    }
  }
}
