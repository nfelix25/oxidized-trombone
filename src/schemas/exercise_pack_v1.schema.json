{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "exercise_pack_v1.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "role",
    "exercise_id",
    "node_id",
    "depth_target",
    "objective",
    "starter_files",
    "test_files",
    "run_instructions",
    "hint_policy"
  ],
  "properties": {
    "schema_version": { "const": "exercise_pack_v1" },
    "role": { "const": "author" },
    "exercise_id": { "type": "string" },
    "node_id": { "type": "string" },
    "depth_target": { "type": "string", "enum": ["D1", "D2", "D3"] },
    "objective": { "type": "string" },
    "starter_files": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["path", "content"],
        "properties": {
          "path": { "type": "string" },
          "content": { "type": "string" }
        }
      }
    },
    "test_files": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["path", "content"],
        "properties": {
          "path": { "type": "string" },
          "content": { "type": "string" }
        }
      }
    },
    "run_instructions": { "type": "object" },
    "hint_policy": {
      "type": "object",
      "required": ["max_hint_level", "reveal_allowed_before_threshold"],
      "properties": {
        "max_hint_level": { "type": "integer", "enum": [1, 2, 3] },
        "reveal_allowed_before_threshold": { "type": "boolean" }
      }
    }
  }
}
