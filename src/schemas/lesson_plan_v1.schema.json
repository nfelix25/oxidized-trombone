{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "lesson_plan_v1.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "role",
    "plan_id",
    "node_id",
    "depth_target",
    "objective",
    "misconception_focus",
    "lesson_outline",
    "assessment_plan",
    "next_action"
  ],
  "properties": {
    "schema_version": { "const": "lesson_plan_v1" },
    "role": { "const": "planner" },
    "plan_id": { "type": "string" },
    "node_id": { "type": "string" },
    "depth_target": { "type": "string", "enum": ["D1", "D2", "D3"] },
    "objective": { "type": "string" },
    "misconception_focus": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string" }
    },
    "lesson_outline": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "object" }
    },
    "assessment_plan": { "type": "object" },
    "next_action": {
      "type": "string",
      "enum": ["generate_exercise", "bridge_lesson", "retry_prereq"]
    }
  }
}
